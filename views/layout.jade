!!!
html(xmlns:ng="http://angularjs.org",
     data-ng-app=app.name,
     class="ng-app:" + app.name)#ng-app
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    title= app.name
    meta(name='description', content=description)
    meta(name='author', content=author)
    link(href="/build/build.css", rel="stylesheet", type="text/css")
    style.
      .ng-cloak { display:none; }
       html { font-family: 'Helvetica', 'Arial', sans-serif; }
       main { padding: 40px; }
    block styles
    // if lte IE 9
      script(src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/json2/20121008/json2.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/es5-shim/2.1.0/es5-shim.min.js")
      script.
        (function() {
          if (history.pushState) return;
          window.Element = window.Element || function(){};

          //if hashbang url found and we are not on our base then go to base
          if (window.location.hash.charAt(1) === "!" && window.location.pathname !== '/') {
            window.location.replace('/#!' + window.location.hash.substring(2));
          }
          //if hasbang not found then convert link to hashbang mode
          if(window.location.hash.charAt(1) !== "!") {
            window.location.replace('/#!' + window.location.pathname + window.location.search + window.location.hash);
          }
        })();

  body
    main
      h3
        strong #{app.name}, 
        span v#{app.version}
      block main
    block body
    block scripts
    script(src="/build/build.js")
    script.
      require("#{app.name}");
